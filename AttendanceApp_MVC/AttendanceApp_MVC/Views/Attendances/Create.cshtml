@model AttendanceBook.Models.Attendance

@{
    ViewData["Title"] = "Create";
}

<style>

    .info-section{
        display: flex;
        gap: 20px;
        justify-content: center;
        margin: 20px;
    }

    .submit-action{
        justify-content: center;
        display: flex;
        margin-top: 60px;
    }



    @@media (max-width: 991px){
        .info-section{
            flex-direction: column;
        }
    }


</style>


<h4 style="justify-content: center; display: flex;">
    Create Attendance
</h4>
<hr />
<div class="row" >
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-12  info-section">
                <div class="form-group col-lg-5 col-sm-12">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>




                <div class="form-group col-lg-5 col-sm-12">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

        </div>


        <div class="col-12  info-section">
            <div class="col-lg-5 col-sm-12 form-group">
                <label asp-for="AttendanceReason" class="control-label"></label>
                <input asp-for="AttendanceReason" class="form-control" />
                <span asp-validation-for="AttendanceReason" class="text-danger"></span>
            </div>

            <div class="col-5 "></div>
            </div>



            
            <div class="form-group submit-action">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
</div>

<div style="margin: 80px;">
    <a  asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
